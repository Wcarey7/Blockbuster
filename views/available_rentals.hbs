{{!-- Available_Rentals --}}

<main>

<h2>Available Rentals</h2>
<p>&nbsp;</p>

{{!-- The Data from our Database --}}
{{!-- Create a table --}}
<div id = "browse" class = "data-table">
    <table id= "available-rentals-table" border="1" cellpadding="5">

        {{!-- Header section --}}
        <thead>

            {{!-- For just the first row, we print each key of the row object as a header cell so we
            know what each column means when the page renders --}}
            <tr>
                {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
                {{/each}}
                <th>Delete</th>
            </tr>
        </thead>

        {{!-- Body section --}}
        <tbody>

            {{!-- For each row, print the id, first_name, last_name, etc, in order --}}
            {{#each data}}
            <tr data-value={{this.avail_id}}>
                <td>{{this.avail_id}}</td>
                <td>{{this.movie_id}}</td>
                <td>{{this.location_id}}</td>
                <td>{{this.avail_copies}}</td>
                <td><button onclick="deleteAvailRental({{this.avail_id}})">Delete</button></td>                                                    
            </tr>
            {{/each}}
        </tbody>
    </table>
    <script src="./js/delete_available_rentals.js"></script>
</div>